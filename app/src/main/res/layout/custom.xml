<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:orientation="vertical"
    android:background="#0a000f"
    >
    <TextView
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_heading" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageee"/>
    <TextView
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="@dimen/text_size_heading_2"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="read more...."
        android:textSize="@dimen/text_size_heading_2"
        android:textColor="#00f"
        android:layout_marginBottom="10dp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/share"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_if_facebook_circle_color_107175"
          android:layout_marginLeft="5dp"/>
       <ImageView
           android:id="@+id/twitter"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_if_twitter_circle_color_107170"
          android:layout_marginLeft="15dp"
           />
       <ImageView
           android:id="@+id/share_common"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_share"
           android:layout_marginLeft="15dp"
           />
   </LinearLayout>

</LinearLayout>